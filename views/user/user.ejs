<%- include('../partials/header.ejs') %>
    
    <div class="max-w-xl bg-white shadow-lg rounded-lg overflow-hidden mx-auto m-4">
        <img class="w-full h-48 object-cover" src="https://images.unsplash.com/photo-1597113117918-eb40fe0b84e7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="avatar">
        
        <div class="py-3 text-center">
            <% if (currentUser) { %>
    
                <h2 class="text-center font-bold text-gray-700 text-2xl">
                    Hello <%= currentUser.username %>
                </h2>

            <% } else { %>

                <h2 class="text-center font-bold text-gray-700 text-2xl">
                    Hi there!
                </h2>
                
            <% } %> 

            <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-3 mt-2 border border-blue-500 hover:border-transparent rounded-full">
                <a href="/shop">Continue shopping</a>
            </button>
        </div>

        
        <div class="container mx-auto px-6 pb-8">
            <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-2">
                <div class="text-center">    
                    <h1 class="mt-2 font-semibold text-xl text-gray-800">Your Orders</h1>
    
                    <a href="/cart" class="text-blue-600 font-bold mx-2 text-sm hover:text-blue-500">Shopping Cart</a>
                            
                    <a href="/checkout" class="text-blue-600 font-bold mx-2 text-sm hover:text-blue-500">Checkout</a>    
        </div>
    
                <div class="text-center">    
                    <h1 class="mt-2 font-semibold text-xl text-gray-800">Login & Security</h1>
                    
                    <div class="mt-1">
                        <% if (!currentUser){ %> 
                            <a href="/login" class="text-blue-600 font-bold mx-2 text-sm hover:text-blue-500">Login</a>
                            
                            <a href="/register" class="text-blue-600 font-bold mx-2 text-sm hover:text-blue-500">Register</a>    
                        <% } else { %> 
                            <a href="/logout" class="text-blue-600 font-bold mx-2 text-sm hover:text-blue-500">Sign Out</a>    
                        <% } %> 
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/footer') %>