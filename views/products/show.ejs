<%- include('../partials/header') %>

<div class="lg:flex lg:max-w-5xl lg:py-5 mx-auto mt-5 bg-white overflow-hidden shadow-md rounded-lg">
    <!-- Image -->
    <div class="lg:w-2/5 p-5">        
        <img class="lg:h-auto lg:w-full lg:rounded-lg h-screen max-w-3xl mx-auto object-cover" src="<%= product.image %>" alt="Images of children">
    </div>

    <!-- Product Details -->
    <div class="lg:w-3/5 p-5 lg:px-5">
        <!-- Title & description -->
        <div>
            <h3 class="text-gray-800 font-semibold text-2xl">
                <%= product.title %> 
            </h3>

            <p class="mt-2 max-w-3xl text-sm text-gray-600 text-justify">
                <%= product.description %> 
            </p>
        </div>

        <!-- Size chart -->
        <div>
            <h3 class="my-4 text-gray-800 font-semibold text-lg">Size</h3>

            <ul class="flex flex-wrap md:flex-row text-center">    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">3-6</a>
                </li>
        
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">6-9</a>
                </li>
        
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">9-12</a>
                </li>
    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">12-18</a>
                </li>
    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">18-24</a>
                </li>
    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">2T</a>
                </li>
    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">3T</a>
                </li>
    
                <li class="mx-1 px-3 py-2 bg-gray-200 text-gray-700 hover:bg-red-500 hover:text-gray-200 rounded-lg">
                    <a href="#" class="font-bold">4T</a>
                </li>
            </ul>    
        </div>

        <!-- Details & fit -->
        <div class="mt-8">
            <h3 class="text-gray-800 font-semibold text-lg">Details & Fit</h3>

            <ul class="mt-4 pl-5 list-disc text-gray-600">
                <li>47% Modal | 47% Cotton | 6% Spandex</li>
                <li>Four-way Stretch Fabric With An Ultra-Soft Feel</li>
                <li>Functional, Comfortable, Durable</li>
                <li>Fits True To Size (see Sizing Chart for exact measurements)</li>
            </ul>
        </div>

        <!-- Price & cart -->
        <div class="flex items-center justify-between mt-8 py-2 px-3 bg-gray-200">
            <span class="text-gray-800 font-bold ">$30</span>

            <a href="" class="mr-1 mb-1 px-4 py-2 text-white bg-red-500 border border-solid border-red-500 hover:bg-transparent hover:text-red-500 font-bold capitalize text-sm rounded-full outline-none focus:outline-none" type="button" style="transition: all .15s ease">
                add to cart
            </a>
        </div>

        <a href="/shop" class="mt-5 float-right text-blue-500 underline">< Continue shopping</a>
    </div>    
</div>

<!-- Comments -->
<div class="lg:flex-col lg:max-w-5xl mx-auto my-5 px-5 items-start shadow-md rounded-lg bg-gray-200">
    <div class="pt-2">
        <h2 class="font-bold text-2xl">Reviews</h2>

        <!-- Leave a comment button -->
        <a href="/shop/<%= product._id %>/comments/new " class="float-right -mt-8 text-red-500 bg-transparent border border-solid border-red-300 hover:bg-red-400 hover:text-white font-bold capitalize text-sm px-4 py-2 rounded-full outline-none focus:outline-none" type="button" style="transition: all .15s ease">
            leave a review
        </a>    
    </div>
    
    <hr class="border-b border-none h-3 m-0 shadow-lg">

    <!-- Display comments -->
    <%  product.comments.forEach(comment => { %> 
        <div class="py-4">
            <p class="flex items-baseline">
                <span class="font-bold"><%= comment.author %> </span>
                <span class="ml-2 text-green-600 text-xs">Verified Buyer</span>
            </p>

            <!-- Stars -->
            <div class="flex items-center mt-2">
                <svg class="w-4 h-4 fill-current text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/></svg>
                <svg class="w-4 h-4 fill-current text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/></svg>
                <svg class="w-4 h-4 fill-current text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/></svg>
                <svg class="w-4 h-4 fill-current text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/></svg>
                <svg class="w-4 h-4 fill-current text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/></svg>
            </div>

            <div class="mt-3">
                <p class="mt-1">
                    <%= comment.text %> 
                </p>
            </div>

            <div class="flex items-center justify-between mt-4 text-sm text-gray-600 fill-current">
                <div class="flex items-center">
                    <span>Was this review helplful?</span>
                    <button class="flex items-center ml-6">
                        <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M11 0h1v3l3 7v8a2 2 0 0 1-2 2H5c-1.1 0-2.31-.84-2.7-1.88L0 12v-2a2 2 0 0 1 2-2h7V2a2 2 0 0 1 2-2zm6 10h3v10h-3V10z"/></svg>
                        <span class="ml-2">56</span>
                    </button>
                    <button class="flex items-center ml-4">
                        <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M11 20a2 2 0 0 1-2-2v-6H2a2 2 0 0 1-2-2V8l2.3-6.12A3.11 3.11 0 0 1 5 0h8a2 2 0 0 1 2 2v8l-3 7v3h-1zm6-10V0h3v10h-3z"/></svg>
                        <span class="ml-2">10</span>
                    </button>
                </div>
            </div>
        </div>
    <% }); %>

</div>


<%- include('../partials/footer') %>